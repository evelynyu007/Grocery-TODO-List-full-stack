<%- include('../partials/header') %>
<div class="meal-new-container">
  <!-- sidebar -->
  <div class="new-meal-sidebar"></div>

  <!-- create new meal container -->
  <div class="create-new-meal-con">
    <div class="fill-new-meal">
    <form id="new-form" action="/mealprep" method="POST">
      <label>Create your own meal:</label>
      <br />
      <label>Title:</label>
      <input type="text" name="title" />
      <br />
      <label>Estimated Price($):</label>
      <input type="number" name="price" />
      <br />
      <label>Prepare Time(min):</label>
      <input type="number" name="prep_time" />
      <br />
      <label>Image URL:</label>
      <input type="url" name="imgURL" />
      <br />
      <label>Spicy Rating</label>
      <select name="starRating">
        <option value="🌶️🌶️🌶️">🌶️🌶️🌶️</option>
        <option value="🌶️🌶️">🌶️🌶️</option>
        <option value="🌶️">🌶️</option>
      </select>
      <br />
    

      <label>Select Ingredients: </label> <br />
    </div>

      <section class="badge-container">
        <% dataIngredients.forEach(function(i){ %>

        <article class="badge">
          <img
            src="<%= i.imgURL %>"
            alt="<%= i.name %>"
            width="100"
            height="100"
          />

          <input
            type="checkbox"
            id="<%= i._id %>"
            name="ingredients"
            value="<%= i._id %>"
          />
          <label for="<%= i._id %>"><%= i.name %></label><br />
        </article>
        <% }) %>
      </section>

      <!-- Submit Meal Prep  -->
      <input type="submit" class="btn btn-success" value="Add Meal Prep" />
    </form>
  </div>
</div>
<%- include('../partials/footer') %>
