<%- include('../partials/header') %> <% if (mealprep.length) { %>
<table id="list">
  <thead>
    <tr>
      <th>Meal Prep</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <% let total = 0 %>

  <tbody>
    <% mealprep.forEach(function(m) { %>
    <tr>
      <td><%= m.title %></td>
      <td><%= m.price %></td>
      <% if(m.price) total += m.price %>
      <td>
        <a href="/mealprep/<%= m._id %>"><button>DETAILS</button></a>
      </td>
      <td>
        <!--  ?_method=DELETE to overwrite POST-->
        <form action="/mealprep/<%= m._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" />
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<br />
<div>ðŸ’µ Total Cost: <%= total %> ðŸ’µ</div>
<% } else { %>
<h3>No Meal Prep Yet</h3>
<% } %>

